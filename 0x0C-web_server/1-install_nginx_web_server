#!/usr/bin/env bash
# This script installs and configures Nginx to listen on port 80 and return "Hello World!" at its root URL.

# Update apt package index and install Nginx
sudo apt update
sudo apt install nginx -y

# Configure Nginx to listen on port 80 and return "Hello World!" at its root URL
sudo echo "server {
    listen 80;
    location / {
        echo 'Hello World!';
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx without using systemctl
sudo kill -s SIGHUP $(cat /run/nginx.pid)
