#!/usr/bin/env bash

# This script installs and configures Nginx on an Ubuntu machine to return "Hello World!" at the root URL.

# Install Nginx
apt-get update
apt-get install -y nginx

# Configure Nginx
echo "server {
    listen 80;
    location / {
        echo 'Hello World!';
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx to apply changes
systemctl restart nginx
