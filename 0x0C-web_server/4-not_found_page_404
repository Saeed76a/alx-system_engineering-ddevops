#!/usr/bin/env bash
# This script configures Nginx to have a custom 404 page that contains the string "Ceci n'est pas une page".

# Update package list
sudo apt-get update

# Install Nginx
sudo apt-get install nginx -y

# Stop Nginx service
sudo service nginx stop

# Configure custom 404 page
sudo bash -c 'cat << EOF > /etc/nginx/sites-available/default
server {
    listen 80;
    root /var/www/html;
    error_page 404 /404.html;
    location = /404.html {
        internal;
        echo "Ceci n'est pas une page";
    }
    location / {
        echo "Hello World!";
    }
}
EOF'

# Start Nginx service
sudo nohup nginx &> /dev/null &

# Verify Nginx installation
ps aux | grep nginx

# Output success message
echo "Nginx has been configured to have a custom 404 page."
